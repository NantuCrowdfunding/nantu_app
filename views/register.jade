extends layout

block content

  body
    .container
      .row
        .col-md-6.col-md-offset-3
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Registra tu perfil en NANTU!!
            .panel-body
              form(role='form' action="/users/createUser" method="post")
                fieldset
                  .form-group
                    input.form-control(placeholder='Nombre', name='Name', type='label', autofocus='', id="Name")
                  .form-group
                    input.form-control(placeholder='Apellido', name='LastName', type='label', autofocus='', id="LastName")
                  .form-group
                    select.form-control
                      option Masculino
                      option Femenino
                      option X
                  .form-group
                    input.form-control(placeholder='E-mail', name='Email', type='email', autofocus='', id="Email")
                  .form-group
                    input.form-control(placeholder='Contrase√±a', name='Password', type='password', value='', id='Password')
                  // Change this to a button or input when using this as a form
                  button(class="btn btn-primary btn-lg btn-block") Registrame!!!
                  
                  a.btn.btn-block.btn-social.btn-twitter
                    span.fa.fa-twitter
                    |  Login con Twitter
                  a.btn.btn-block.btn-social.btn-facebook
                    span.fa.fa-facebook
                    |  Login con Facebook
