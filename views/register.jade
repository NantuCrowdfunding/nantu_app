extends layout

block content

  body
    .container
      .row
        .col-md-6.col-md-offset-3
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Registra tu perfil en NANTU!!
            .panel-body
              form(role='form')
                fieldset
                  .form-group
                    input.form-control(placeholder='Nombre', name='name', type='label', autofocus='')
                  .form-group
                    input.form-control(placeholder='Apellido', name='lastname', type='label', autofocus='')
                  .form-group
                    select.form-control
                      option Masculino
                      option Femenino
                      option X
                  .form-group
                    input.form-control(placeholder='E-mail', name='email', type='email', autofocus='')
                  .form-group
                    input.form-control(placeholder='Contrase√±a', name='password', type='password', value='')
                  // Change this to a button or input when using this as a form
                  a.btn.btn-lg.btn-success.btn-block(href='index.html') Registrar
                  a.btn.btn-block.btn-social.btn-twitter
                    span.fa.fa-twitter
                    |  Login con Twitter
                  a.btn.btn-block.btn-social.btn-facebook
                    span.fa.fa-facebook
                    |  Login con Facebook
