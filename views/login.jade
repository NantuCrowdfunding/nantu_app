extends layout

block content

  body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Autenticación
            .panel-body
              form(role='form')
                fieldset
                  .form-group
                    input.form-control(placeholder='E-mail', name='email', type='email', autofocus='')
                  .form-group
                    input.form-control(placeholder='Contraseña', name='password', type='password', value='')
                  .checkbox
                    label
                      input(name='remember', type='checkbox', value='Remember Me')
                      | Recuerdame
                  // Change this to a button or input when using this as a form
                  a.btn.btn-lg.btn-success.btn-block(href='index.html') Entrar
                  a.btn.btn-block.btn-social.btn-twitter
                    span.fa.fa-twitter
                    |  Login con Twitter
                  a.btn.btn-block.btn-social.btn-facebook
                    span.fa.fa-facebook
                    |  Login con Facebook
    
    
