extends layout

block content

  body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Autenticación
            .panel-body
              form(role='form' action="/users/findPass" method="post")
                fieldset
                  .form-group
                    input.form-control(placeholder='E-mail', name='email', type='email', autofocus='', id="Email")
                  .form-group
                    input.form-control(placeholder='Contraseña', name='password', type='password', value='', id="Password")
                  .checkbox
                    label
                      input(name='remember', type='checkbox', value='Remember Me')
                      | Recuerdame
                  // Change this to a button or input when using this as a form
                  button(class="btn btn-primary btn-lg btn-block") Enviar
                  a.btn.btn-block.btn-social.btn-twitter
                    span.fa.fa-twitter
                    |  Login con Twitter
                  a.btn.btn-block.btn-social.btn-facebook
                    span.fa.fa-facebook
                    |  Login con Facebook
    
    
